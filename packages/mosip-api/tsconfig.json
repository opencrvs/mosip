{
  "compilerOptions": {
    "module": "ES2015",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "fhir",
      "node"
    ],
    "paths": {
      "@mosip/ida-auth-sdk": [
        "./src/ida-auth-sdk"
      ],
      "@opencrvs/mosip-crypto": [
        "./src/crypto"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "eslint.config.mjs"
  ]
}